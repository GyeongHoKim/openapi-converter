{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Debug CLI (Built)",
			"type": "node",
			"request": "launch",
			"program": "${workspaceFolder}/dist/cli.js",
			"cwd": "${workspaceFolder}",
			"args": [],
			"preLaunchTask": "build",
			"sourceMaps": true,
			"outFiles": ["${workspaceFolder}/dist/**/*.js"],
			"skipFiles": ["<node_internals>/**"],
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen"
		},
		{
			"name": "Debug CLI (Built) with Args",
			"type": "node",
			"request": "launch",
			"program": "${workspaceFolder}/dist/cli.js",
			"cwd": "${workspaceFolder}",
			"args": ["${input:cliArgs}"],
			"preLaunchTask": "build",
			"sourceMaps": true,
			"outFiles": ["${workspaceFolder}/dist/**/*.js"],
			"skipFiles": ["<node_internals>/**"],
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen"
		},
		{
			"name": "Debug Current File (Built)",
			"type": "node",
			"request": "launch",
			"program": "${workspaceFolder}/dist/${relativeFileDirname}/${fileBasenameNoExtension}.js",
			"cwd": "${workspaceFolder}",
			"preLaunchTask": "build",
			"sourceMaps": true,
			"outFiles": ["${workspaceFolder}/dist/**/*.js"],
			"skipFiles": ["<node_internals>/**"],
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen"
		},
		{
			"name": "Debug Tests (Vitest)",
			"type": "node",
			"request": "launch",
			"runtimeExecutable": "npm",
			"runtimeArgs": ["run", "test"],
			"cwd": "${workspaceFolder}",
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen",
			"skipFiles": ["<node_internals>/**"],
			"sourceMaps": true
		},
		{
			"name": "Debug Current Test File (Vitest)",
			"type": "node",
			"request": "launch",
			"runtimeExecutable": "npm",
			"runtimeArgs": ["run", "test", "--", "${relativeFile}"],
			"cwd": "${workspaceFolder}",
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen",
			"skipFiles": ["<node_internals>/**"],
			"sourceMaps": true
		},
		{
			"name": "Attach to Process",
			"type": "node",
			"request": "attach",
			"port": 9229,
			"restart": true,
			"localRoot": "${workspaceFolder}",
			"remoteRoot": "${workspaceFolder}",
			"skipFiles": ["<node_internals>/**"],
			"sourceMaps": true
		}
	],
	"inputs": [
		{
			"id": "cliArgs",
			"type": "promptString",
			"description": "CLI arguments (e.g., input-file.json -o output.json)"
		}
	]
}
